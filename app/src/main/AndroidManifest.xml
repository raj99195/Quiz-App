<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.Trivia">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.Trivia.ScoreActivity"></activity>
        <activity android:name="com.example.Trivia.QuestionActivity" />
        <activity android:name="com.example.Trivia.SetsActivity" />
        <activity android:name="com.example.Trivia.CategoryActivity" />
        <activity android:name="com.example.Trivia.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.Trivia.MainActivity">
        </activity>
    </application>

</manifest>